<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.home.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="@dimen/_8sdp"
        android:background="@color/color_background_primary"
        android:orientation="vertical"
        tools:successToastMessage="@{viewModel.successToastMessage}"
        tools:errorToastMessage="@{viewModel.errorToastMessage}">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="Home"
                android:textAlignment="center"
                android:textSize="@dimen/_36sdp"
                android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp">
            <TextView
                android:id="@+id/txv_email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.email}"
                android:layout_toEndOf="@id/txv_email_title" />
        </RelativeLayout>

        <Button
            style="@style/ButtonPrimaryHighlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_gravity="center"
            android:text="My profile"
            android:onClick="@{() -> viewModel.navigateToUserProfile()}"
            app:cornerRadius="@dimen/button_primary_corner_radius" />

        <Button
            style="@style/ButtonPrimaryHighlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="Settings"
            android:onClick="@{() -> viewModel.navigateToSettings()}"
            app:cornerRadius="@dimen/button_primary_corner_radius" />

        <Button
            style="@style/ButtonPrimaryHighlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="Friend requests"
            android:onClick="@{() -> viewModel.navigateToFriendRequests()}"
            app:cornerRadius="@dimen/button_primary_corner_radius" />

        <Button
            style="@style/ButtonPrimaryHighlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="Sign out"
            android:onClick="@{() -> viewModel.signOut()}"
            app:cornerRadius="@dimen/button_primary_corner_radius" />
    </LinearLayout>
</layout>