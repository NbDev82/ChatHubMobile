<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CustomMaterialCardViewDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_30sdp"
        android:paddingVertical="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="In-app password"
            android:textAlignment="center"
            android:textColor="@color/color_text_secondary_title"
            android:textSize="@dimen/primary_title_size" />

        <TextView
            android:id="@+id/txv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            tools:text="Enter your information for password setup"
            android:textAlignment="center"
            android:textColor="@color/color_text_primary"
            android:textSize="@dimen/primary_sub_title_size" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email"
            style="@style/CustomTextInputLayoutPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:hint="Email"
            app:endIconMode="clear_text"
            app:startIconContentDescription="Mail Icon"
            app:startIconDrawable="@drawable/ic_mail"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/ic_circle_xmark_solid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textSize="@dimen/primary_text_size" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_password"
            style="@style/CustomTextInputLayoutPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Password"
            app:endIconMode="password_toggle"
            app:startIconContentDescription="Mail Icon"
            app:startIconDrawable="@drawable/ic_lock"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/ic_circle_xmark_solid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="@dimen/primary_text_size" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/ButtonPrimaryHighlight"
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Submit"
            android:layout_gravity="end"
            app:cornerRadius="@dimen/button_primary_corner_radius" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>