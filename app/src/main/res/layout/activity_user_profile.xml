<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.user.profile.UserProfileViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_background_primary"
        app:customAlertDialog="@{viewModel.alertDialogModel}"
        tools:successToastMessage="@{viewModel.successToastMessage}"
        tools:errorToastMessage="@{viewModel.errorToastMessage}">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/gradient_color_primary">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_nav_arrow_left"
                app:tint="@android:color/white"
                android:onClickListener="@{() -> viewModel.navigateToHome()}"
                android:contentDescription="Back to home"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Personal profile"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/primary_title_size" />
        </androidx.appcompat.widget.Toolbar>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.isUserInitializing ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <include layout="@layout/profile_items_placeholder"/>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.isUserInitializing ? View.GONE : View.VISIBLE}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fl_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:onClick="@{() -> viewModel.openImagePicker()}">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_profile"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:background="@drawable/background_image"
                        android:scaleType="centerCrop"
                        app:imageBitmap="@{viewModel.imageBitmap}"
                        app:riv_oval="true" />

                    <TextView
                        android:id="@+id/txv_img_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Add image"
                        android:visibility="@{viewModel.imageBitmap == null ? View.VISIBLE : View.GONE}"
                        android:textColor="@color/color_text_secondary"
                        android:textSize="@dimen/_10ssp"
                        tools:ignore="InvalidId" />

                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_item_height"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingHorizontal="@dimen/profile_item_padding_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:onClick="@{() -> viewModel.openCustomInputDialog()}">

                    <ImageView
                        android:id="@+id/icon_name"
                        android:layout_width="@dimen/profile_icon_size"
                        android:layout_height="@dimen/profile_icon_size"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_profile_circle_light" />

                    <TextView
                        android:id="@+id/txv_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/icon_name"
                        android:text="Full name"
                        android:textColor="@color/color_text_secondary"
                        android:textSize="@dimen/primary_sub_title_size"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/txv_name_title"
                        android:layout_toStartOf="@id/icon_edit_name"
                        android:text="@{viewModel.fullName.isEmpty() ? `(None)` : viewModel.fullName}"
                        android:gravity="end"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/primary_text_size"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="VÄƒn An"/>

                    <ImageView
                        android:id="@+id/icon_edit_name"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_chevron" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_toEndOf="@id/icon_name"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_primary_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_item_height"
                    android:layout_marginTop="@dimen/profile_item_distance"
                    android:paddingHorizontal="@dimen/profile_item_padding_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:onClick="@{() -> viewModel.openDatePickerDialog()}">

                    <ImageView
                        android:id="@+id/icon_birthday"
                        android:layout_width="@dimen/profile_icon_size"
                        android:layout_height="@dimen/profile_icon_size"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/txv_birthday_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/icon_birthday"
                        android:text="Birthday"
                        android:textColor="@color/color_text_secondary"
                        android:textSize="@dimen/primary_sub_title_size"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/txv_birthday_title"
                        android:layout_toStartOf="@id/icon_edit_birthday"
                        android:gravity="end"
                        android:text="@{viewModel.birthdayStr}"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/primary_text_size"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="01/01/1990"/>

                    <ImageView
                        android:id="@+id/icon_edit_birthday"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_chevron" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_toEndOf="@id/icon_birthday"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_primary_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_item_height"
                    android:layout_marginTop="@dimen/profile_item_distance"
                    android:paddingHorizontal="@dimen/profile_item_padding_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:onClick="@{() -> viewModel.openSingleChoiceGender()}">

                    <ImageView
                        android:id="@+id/icon_gender"
                        android:layout_width="@dimen/profile_icon_size"
                        android:layout_height="@dimen/profile_icon_size"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_gender" />

                    <TextView
                        android:id="@+id/txv_gender_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/icon_gender"
                        android:text="Gender"
                        android:textColor="@color/color_text_secondary"
                        android:textSize="@dimen/primary_sub_title_size"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/txv_gender_title"
                        android:layout_toStartOf="@id/icon_edit_gender"
                        android:gravity="end"
                        android:text="@{viewModel.gender.getDisplay()}"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/primary_text_size"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Male" />

                    <ImageView
                        android:id="@+id/icon_edit_gender"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_right_chevron" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_toEndOf="@id/icon_gender"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_primary_gray" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/profile_item_padding_horizontal"
                    android:drawableStart="@drawable/ic_info_circle"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="Update your changes."
                    android:textColor="@color/color_error"
                    android:layout_gravity="center_vertical"
                    android:visibility="@{viewModel.isDataChanged ? View.VISIBLE : View.INVISIBLE}" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:animateLayoutChanges="true">

                    <com.google.android.material.button.MaterialButton
                        style="@style/ButtonPrimaryHighlight"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:text="Update"
                        android:onClick="@{()-> viewModel.openUpdateDialog()}"
                        android:enabled="@{viewModel.isDataChanged}"
                        android:visibility="@{viewModel.isUserUpdating ? View.INVISIBLE : View.VISIBLE}"
                        app:cornerRadius="@dimen/button_primary_corner_radius" />


                    <ProgressBar
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:visibility="@{viewModel.isUserUpdating ? View.VISIBLE : View.INVISIBLE}"
                        tools:visibility="invisible"/>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>