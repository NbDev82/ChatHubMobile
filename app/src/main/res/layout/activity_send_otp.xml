<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.user.login.otp.send.SendOtpViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/mainRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_bg"
        android:paddingHorizontal="@dimen/profile_item_padding_horizontal"
        tools:successToastMessage="@{viewModel.successToastMessage}"
        tools:errorToastMessage="@{viewModel.errorToastMessage}">

        <ImageView
            android:id="@+id/sendIcon"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/otpTitleLL"
            android:layout_marginEnd="@dimen/item_gap"
            android:background="@drawable/ic_send" />

        <LinearLayout
            android:id="@+id/otpTitleLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP Verification"
                android:textSize="@dimen/primary_title_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/primary_text"
                android:text="We will send you an One Time Password on this mobile number"
                android:textSize="@dimen/primary_text_size" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneNumberTIL"
            style="@style/CustomTextInputLayoutPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/otpTitleLL"
            android:layout_marginTop="@dimen/_20sdp"
            app:prefixText="@{viewModel.prefixPhoneNumber}"
            app:counterEnabled="true"
            app:counterMaxLength="11"
            android:hint="Phone number"
            app:endIconMode="clear_text"
            app:startIconContentDescription="Phone Icon"
            app:startIconDrawable="@drawable/ic_phone"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/ic_circle_xmark_solid"
            app:error="@{viewModel.phoneNumberError}">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLines="1"
                android:onTextChanged="@{(s, start, before, count) -> viewModel.validatePhoneNumber(s)}"
                android:text="@={viewModel.phoneNumber}"
                android:textSize="@dimen/primary_text_size" />

        </com.google.android.material.textfield.TextInputLayout>

        <FrameLayout
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneNumberTIL"
            android:animateLayoutChanges="true">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="@dimen/primary_text_size"
                android:textStyle="bold"
                android:onClick="@{()-> viewModel.sendOtp()}"
                android:enabled="@{viewModel.phoneNumberError == null}"
                android:visibility="@{viewModel.isOtpSending ? View.INVISIBLE : View.VISIBLE}"
                app:cornerRadius="@dimen/_8sdp" />

            <ProgressBar
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:visibility="@{viewModel.isOtpSending ? View.VISIBLE : View.INVISIBLE}"
                tools:visibility="invisible"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/nextBtn"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have an account?"
                android:textColor="@color/primary_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:onClick="@{() -> viewModel.navigateToSignUp()}"
                android:text="Sign up"
                android:textColor="@color/link_blue"/>
        </LinearLayout>

    </RelativeLayout>
</layout>
