<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.user.login.LoginViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_primary"
        tools:successToastMessage="@{viewModel.successToastMessage}"
        tools:errorToastMessage="@{viewModel.errorToastMessage}">

        <RelativeLayout
            android:id="@+id/rl_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:background="@drawable/background_gradient_half_circle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/card_view_login"
            android:layout_centerHorizontal="true"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_condensed_bold"
                android:text="Chat Hub"
                android:textColor="@color/color_text_primary_title"
                android:textSize="@dimen/primary_app_title_size"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_25sdp"
            app:cardBackgroundColor="@color/color_background_primary"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/_6sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textAlignment="center"
                    android:textColor="@color/color_text_secondary_title"
                    android:textSize="@dimen/primary_title_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Please login to continue our app"
                    android:textAlignment="center"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/primary_sub_title_size" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/CustomTextInputLayoutPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:hint="Email"
                    app:endIconMode="clear_text"
                    app:startIconContentDescription="Mail Icon"
                    app:startIconDrawable="@drawable/ic_mail">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:text="@={viewModel.email}"
                        android:textSize="@dimen/primary_text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/CustomTextInputLayoutPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:hint="Password"
                    app:endIconMode="password_toggle"
                    app:startIconContentDescription="Mail Icon"
                    app:startIconDrawable="@drawable/ic_lock">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:text="@={viewModel.password}"
                        android:textSize="@dimen/primary_text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:onClick="@{() -> viewModel.navigateToForgotPassword()}"
                    android:text="Forgot password?"
                    android:textColor="@color/color_primary_link_blue" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:animateLayoutChanges="true">

                        <com.google.android.material.button.MaterialButton
                            style="@style/ButtonPrimaryHighlight"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:onClick="@{()-> viewModel.onLoginBtnClick()}"
                            android:text="Login"
                            android:visibility="@{viewModel.isLogging ? View.GONE : View.VISIBLE}"
                            app:cornerRadius="@dimen/button_primary_corner_radius" />

                        <ProgressBar
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:visibility="@{viewModel.isLogging ? View.VISIBLE : View.GONE}"
                            tools:visibility="gone" />
                    </FrameLayout>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@color/color_primary_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Or login with" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:background="@drawable/circle_ripple_effect"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_sms"
                        android:onClick="@{()-> viewModel.navigateToSendOtp()}" />

                    <ImageView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginStart="@dimen/item_gap"
                        android:padding="@dimen/_8sdp"
                        android:background="@drawable/circle_ripple_effect"
                        android:src="@drawable/ic_google"
                        android:onClick="@{()-> viewModel.navigateToGoogleSignIn()}" />

                    <ImageView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginStart="@dimen/item_gap"
                        android:padding="@dimen/_8sdp"
                        android:background="@drawable/circle_ripple_effect"
                        android:src="@drawable/ic_github"
                        android:onClick="@{()-> viewModel.navigateToGithubAuth()}" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/card_view_login"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have an account?"
                android:textColor="@color/color_text_primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:onClick="@{() -> viewModel.navigateToSignUp()}"
                android:text="Sign up"
                android:textColor="@color/color_primary_link_blue"/>
        </LinearLayout>

    </RelativeLayout>
</layout>
