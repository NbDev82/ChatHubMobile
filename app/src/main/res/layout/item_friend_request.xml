<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="request"
            type="com.example.friend.friendrequest.adapter.FriendRequestView" />

        <variable
            name="listener"
            type="com.example.friend.friendrequest.adapter.FriendRequestListener" />

        <variable
            name="position"
            type="int" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primary_bg"
        app:strokeWidth="0dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/avatarFl"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:onClick="@{() -> listener.onItemClick(position)}"
                android:padding="@dimen/_2sdp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_image"
                    android:scaleType="centerCrop"
                    app:imageBitmap="@{request.recipientAvatar}"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/textAddImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="None"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="@{request.recipientAvatar == null ? View.VISIBLE : View.GONE}"
                    tools:ignore="InvalidId" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:id="@+id/nameTxv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@id/timeAgoTxv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{request.recipientName}"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/primary_sub_title_size"
                    tools:text="Van A" />

                <TextView
                    android:id="@+id/timeAgoTxv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:maxLines="1"
                    android:text="@{request.timeAgo}"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/primary_text_size"
                    tools:text="1w"/>

                <TextView
                    android:id="@+id/mutualFriendsTxv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/nameTxv"
                    android:layout_above="@id/buttonGroupLl"
                    android:ellipsize="marquee"
                    android:text="@{String.valueOf(request.mutualFriends + ` mutualFriend`)}"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/primary_text_size"
                    tools:text="1 mutual friend"/>

                <LinearLayout
                    android:id="@+id/buttonGroupLl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="@dimen/_85sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="Confirm"
                        android:textColor="@color/white"
                        android:textSize="@dimen/primary_text_size"
                        android:textStyle="bold"
                        android:onClick="@{() -> listener.onAcceptClick(position)}"
                        app:cornerRadius="@dimen/_8sdp" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="@dimen/_85sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:text="Reject"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/primary_text_size"
                        android:textStyle="bold"
                        android:onClick="@{() -> listener.onRejectClick(position)}"
                        android:backgroundTint="@color/secondary_button_bg"
                        app:cornerRadius="@dimen/_8sdp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
