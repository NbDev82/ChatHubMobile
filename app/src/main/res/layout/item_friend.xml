<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="request"
            type="com.example.friend.FriendRequestView" />

        <variable
            name="listener"
            type="com.example.friend.myfriend.adapter.FriendListener" />

        <variable
            name="position"
            type="int" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_background_primary"
        app:strokeWidth="0dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_avatar"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:onClick="@{() -> listener.onItemClick(position)}"
                android:padding="@dimen/_4sdp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_image"
                    android:scaleType="centerCrop"
                    app:imageBase64="@{request.imageUrl}"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/txv_img_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="None"
                    android:textColor="@color/color_text_secondary"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="@{request.imageUrl == null ? View.VISIBLE : View.GONE}"
                    tools:ignore="InvalidId" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@id/btn_more"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{request.displayName}"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/primary_sub_title_size"
                    tools:text="Van A" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/txv_name"
                    android:ellipsize="marquee"
                    android:text="@{request.mutualFriends > 0 ? String.valueOf(request.mutualFriends + ` mutualFriend`) : ``}"
                    android:textColor="@color/color_text_secondary"
                    android:textSize="@dimen/primary_text_size"
                    android:visibility="@{request.mutualFriends > 0 ? View.VISIBLE : View.GONE}"
                    tools:text="1 mutual friend"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_more"
                    style="@style/ButtonTertiaryNeutral"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="@{()-> listener.onOpenChatClick(position)}"
                    app:iconGravity="textEnd"
                    app:icon="@drawable/ic_chat_lines" />
            </RelativeLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
