<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.user.accountlink.AccountLinkingViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_background_primary"
        tools:successToastMessage="@{viewModel.successToastMessage}"
        tools:errorToastMessage="@{viewModel.errorToastMessage}">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/gradient_color_primary">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_nav_arrow_left"
                app:tint="@android:color/white"
                android:onClickListener="@{() -> viewModel.navigateToSettings()}"
                android:contentDescription="Back to home"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Account linking"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/primary_title_size" />
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_item_height"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/profile_item_padding_horizontal">

                <ImageView
                    android:id="@+id/passIcon"
                    android:layout_width="@dimen/profile_icon_size"
                    android:layout_height="@dimen/profile_icon_size"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_padlock" />

                <TextView
                    android:id="@+id/passTitleTxv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/passIcon"
                    android:text="In-app password"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/primary_sub_title_size"/>

                    <FrameLayout
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:animateLayoutChanges="true">

                        <com.google.android.material.button.MaterialButton
                            style="@style/ButtonPrimaryHighlight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@{viewModel.isInAppPasswordLinked ? `Added` : `Add`}"
                            android:onClick="@{()-> viewModel.addInAppPassword()}"
                            android:enabled="@{!viewModel.isInAppPasswordLinked}"
                            android:visibility="@{viewModel.isInAppAdding ? View.INVISIBLE : View.VISIBLE}"
                            app:cornerRadius="@dimen/button_primary_corner_radius"
                            tools:text="Add" />

                        <ProgressBar
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:visibility="@{viewModel.isInAppAdding ? View.VISIBLE : View.INVISIBLE}"
                            tools:visibility="invisible"/>
                    </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_toEndOf="@id/passIcon"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_primary_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_item_height"
                android:paddingHorizontal="@dimen/profile_item_padding_horizontal">

                <ImageView
                    android:id="@+id/googleIcon"
                    android:layout_width="@dimen/profile_icon_size"
                    android:layout_height="@dimen/profile_icon_size"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_google" />

                <TextView
                    android:id="@+id/googleTitleTxv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/googleIcon"
                    android:text="Google"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/primary_sub_title_size"/>

                <FrameLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:animateLayoutChanges="true">

                    <com.google.android.material.button.MaterialButton
                        style="@style/ButtonPrimaryHighlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@{viewModel.isGoogleAccountLinked ? `Added` : `Add`}"
                        android:onClick="@{()-> viewModel.addGoogleAccount()}"
                        android:enabled="@{!viewModel.isGoogleAccountLinked}"
                        android:visibility="@{viewModel.isGoogleAdding ? View.INVISIBLE : View.VISIBLE}"
                        app:cornerRadius="@dimen/button_primary_corner_radius"
                        tools:text="Added"
                        tools:enabled="false" />

                    <ProgressBar
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:visibility="@{viewModel.isGoogleAdding ? View.VISIBLE : View.INVISIBLE}"
                        tools:visibility="invisible"/>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_toEndOf="@id/googleIcon"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_primary_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_item_height"
                android:paddingHorizontal="@dimen/profile_item_padding_horizontal">

                <ImageView
                    android:id="@+id/githubIcon"
                    android:layout_width="@dimen/profile_icon_size"
                    android:layout_height="@dimen/profile_icon_size"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_github" />

                <TextView
                    android:id="@+id/githubTitleTxv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/githubIcon"
                    android:text="Github"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/primary_sub_title_size"/>

                <FrameLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:animateLayoutChanges="true">

                    <com.google.android.material.button.MaterialButton
                        style="@style/ButtonPrimaryHighlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@{viewModel.isGithubAccountLinked ? `Added` : `Add`}"
                        android:onClick="@{()-> viewModel.addGithubAccount()}"
                        android:enabled="@{!viewModel.isGithubAccountLinked}"
                        android:visibility="@{viewModel.isGithubAdding ? View.INVISIBLE : View.VISIBLE}"
                        app:cornerRadius="@dimen/button_primary_corner_radius"
                        tools:text="Add" />

                    <ProgressBar
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:visibility="@{viewModel.isGithubAdding ? View.VISIBLE : View.INVISIBLE}"
                        tools:visibility="invisible"/>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_toEndOf="@id/githubIcon"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_primary_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_item_height"
                android:paddingHorizontal="@dimen/profile_item_padding_horizontal">

                <ImageView
                    android:id="@+id/smsIcon"
                    android:layout_width="@dimen/profile_icon_size"
                    android:layout_height="@dimen/profile_icon_size"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_sms" />

                <TextView
                    android:id="@+id/smsTitleTxv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/smsIcon"
                    android:text="SMS"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/primary_sub_title_size"/>

                <FrameLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:animateLayoutChanges="true">

                    <com.google.android.material.button.MaterialButton
                        style="@style/ButtonPrimaryHighlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@{viewModel.isSmsAccountLinked ? `Added` : `Add`}"
                        android:onClick="@{()-> viewModel.addSmsAccount()}"
                        android:enabled="@{!viewModel.isSmsAccountLinked}"
                        android:visibility="@{viewModel.isSmsAdding ? View.INVISIBLE : View.VISIBLE}"
                        app:cornerRadius="@dimen/button_primary_corner_radius"
                        tools:text="Added"
                        tools:enabled="false" />

                    <ProgressBar
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:visibility="@{viewModel.isSmsAdding ? View.VISIBLE : View.INVISIBLE}"
                        tools:visibility="invisible"/>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_toEndOf="@id/smsIcon"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_primary_gray" />
            </RelativeLayout>


            <TextView
                android:id="@+id/subTitleTxv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingHorizontal="@dimen/profile_item_padding_horizontal"
                android:text="@string/account_linking_note"
                android:textColor="@color/color_error"
                android:textSize="@dimen/primary_text_size" />
        </LinearLayout>
    </LinearLayout>
</layout>