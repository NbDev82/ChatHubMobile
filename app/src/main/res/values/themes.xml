<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatHub" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary_light_blue</item>
        <item name="android:fontFamily">@font/opensans_regular</item>

        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.ChatHub" parent="Base.Theme.ChatHub" />

    <style name="CustomMaterialCardViewDialog" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardBackgroundColor">@color/color_background_primary</item>
    </style>

    <style name="CustomTextInputLayoutPrimary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Change border color -->
        <item name="boxStrokeWidth">1dp</item>

        <!-- Change corner radius -->
        <item name="boxCornerRadiusTopStart">@dimen/input_layout_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_layout_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_layout_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_layout_corner_radius</item>

        <item name="errorIconDrawable">@null</item>
    </style>

    <!-- Button -->
    <style name="ButtonPrimaryHighlight">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/color_button_primary_highlight_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/color_button_primary_highlight_bg</item>
        <item name="iconTint">@color/color_button_primary_highlight_text</item>
        <item name="iconSize">@dimen/_20sdp</item>
        <item name="iconGravity">textStart</item>
    </style>>

    <style name="ButtonSecondaryHighlight">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/color_button_secondary_highlight_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/color_button_secondary_highlight_bg</item>
        <item name="iconTint">@color/color_button_secondary_highlight_text</item>
        <item name="iconSize">@dimen/_20sdp</item>
        <item name="iconGravity">textStart</item>
    </style>


    <style name="ButtonPrimaryDanger">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/color_button_primary_danger_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/color_button_primary_danger_bg</item>
        <item name="iconTint">@color/color_button_primary_danger_text</item>
        <item name="iconSize">@dimen/_20sdp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ButtonSecondaryDanger">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/color_button_secondary_danger_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/color_button_secondary_danger_bg</item>
        <item name="iconTint">@color/color_button_secondary_danger_text</item>
        <item name="iconSize">@dimen/_20sdp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ButtonPrimaryNeutral">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/color_button_primary_neutral_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/color_button_primary_neutral_bg</item>
        <item name="iconTint">@color/color_button_primary_neutral_text</item>
        <item name="iconSize">@dimen/_20sdp</item>
        <item name="iconGravity">textStart</item>
    </style>
</resources>