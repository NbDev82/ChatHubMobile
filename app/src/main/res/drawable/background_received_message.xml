<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/_1sdp"  android:color="@color/border_color" />  </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />  <stroke
            android:width="@dimen/_1sdp"  android:color="@color/border_color" />
            <corners
                android:topRightRadius="@dimen/_24sdp"
                android:topLeftRadius="@dimen/_24sdp"
                android:bottomRightRadius="@dimen/_24sdp"/>
        </shape>
    </item>

</selector>